<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />
    <Button
        android:id="@+id/getScene"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/getscene"
        app:layout_marginTopPercent="80%"
        android:layout_centerHorizontal="true"
        android:text="获取\n场景"
        android:textSize="24sp"
        android:textColor="#000000"/>
    <Button
        android:id="@+id/startLearn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/getscene"
        app:layout_marginTopPercent="80%"
        android:layout_centerHorizontal="true"
        android:text="开始\n学习"
        android:textSize="24sp"
        android:textColor="#000000"/>
    <Button
        android:id="@+id/refresh"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/refresh"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:textSize="12sp"
        />
    <android.support.percent.PercentRelativeLayout
        android:id="@+id/TipLayout"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="30%"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:background="#000000">
        <TextView
            android:id="@+id/text1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="检测到您的定位："
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="5%"
            />
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            app:layout_marginTopPercent="20%"
            android:textColor="#f5a10a"
            />
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择您的场景："
            android:textSize="18sp"
            app:layout_marginTopPercent="60%"
            app:layout_marginLeftPercent="5%"
            />

        <Button
            android:id="@+id/changeChose2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="换一批"
            android:textSize="12sp"
            app:layout_marginTopPercent="65%"
            app:layout_marginLeftPercent="11.5%"
            android:background="@null"
            android:textColor="#000000"

            />
        <Button
            android:id="@+id/changeChose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/changechose"
            app:layout_marginTopPercent="75%"
            app:layout_marginLeftPercent="14%"
            app:layout_widthPercent="4%"
            app:layout_heightPercent="8.5%"
            />


        <Button
            android:id="@+id/first_button"
            android:background="@drawable/scenechose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            app:layout_widthPercent="20%"
            app:layout_heightPercent="20%"
            app:layout_marginLeftPercent="50%"
            app:layout_marginTopPercent="45%"
            android:textColor="#000000"
            />
        <Button
            android:id="@+id/second_button"
            android:background="@drawable/scenechose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="20%"
            app:layout_heightPercent="20%"
            app:layout_marginLeftPercent="75%"
            app:layout_marginTopPercent="45%"
            android:textColor="#000000"
            />
        <Button
            android:id="@+id/third_button"
            android:background="@drawable/scenechose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="20%"
            app:layout_heightPercent="20%"
            app:layout_marginTopPercent="72%"
            app:layout_marginLeftPercent="50%"
            android:textColor="#000000"
            />
        <Button
            android:id="@+id/fourth_button"
            android:background="@drawable/scenechose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="20%"
            app:layout_heightPercent="20%"
            app:layout_marginLeftPercent="75%"
            app:layout_marginTopPercent="72%"
            android:textColor="#000000"
            />
    </android.support.percent.PercentRelativeLayout>


</android.support.percent.PercentRelativeLayout>